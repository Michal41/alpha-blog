<div id="new-arttile" align="center">
  <%= link_to "Create new article ", new_article_path %>
</div>



<div>

  <table>

    <tr>
      <th>title</th>
      <th>description</th>
    </tr>

    <% @articles.each do |article| %>
      <tr>

          <td> <%= article.title %> </td>
          <td> <%= article.description %> </td>
          <td> <%= link_to 'edit', edit_article_path(article) %> </td>
          <td> <%= link_to 'show', article_path(article) %> </td>
          <td> <%= link_to 'remove', article_path(article), method: :delete, data:{confirm: "Are you sure ?"} %> </td>


      </tr>

    <% end %>


  </table>

</div>



